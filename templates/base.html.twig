<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}To Do List app{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

{% block header %}
    {{ component('header') }}

    {% block header_image %}
        {{ component('header-image', {crop: true}) }}
    {% endblock %}
{% endblock %}

{% for type, messages in app.flashes %}
    <div class="container">
        {% for message in messages %}
            <p class="alert alert-{{ type }}">{{ message }}</p>
        {% endfor %}
    </div>
{% endfor %}

{% block body %}{% endblock %}

{% block footer %}
    <footer class="container pb-5">
        <hr>
        <div class="text-end fs-6 fw-light pt-4">Copyright © OpenClassrooms</div>
    </footer>
{% endblock %}
</body>
</html>
