<div {{ attributes }}>
    {{ form_start(form, {attr: {class: 'row g-3 mt-4'}}) }}

    <div class="col-12">
        {{ form_widget(form.email, {attr: {class: 'form-control', placeholder: 'E-mail'}}) }}
        {{ form_errors(form.email, {attr: {class: 'invalid-feedback'}}) }}
    </div>

    <div class="col-12">
        {{ form_widget(form.username, {attr: {class: 'form-control', placeholder: 'Identifiant'}}) }}
        {{ form_errors(form.username, {attr: {class: 'invalid-feedback'}}) }}
    </div>

    <div class="col-12 col-md-auto mt-5">
        {{ form_widget(form.plainPassword, {attr: {class: 'form-control', 'placeholder': 'Mot de passe'}}) }}
        {{ form_errors(form.plainPassword, {attr: {class: 'invalid-feedback'}}) }}
    </div>

    <div class="col-12 col-md-auto mt-5">
        {{ form_widget(form.roles, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form.roles, {attr: {class: 'invalid-feedback'}}) }}
    </div>

    <div class="col- col-md mt-5">
        <input class="btn btn-success" type="submit" name="submit" value="Enregistrer">
    </div>

    {{ form_end(form) }}
</div>
