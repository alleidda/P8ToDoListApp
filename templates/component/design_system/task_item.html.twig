<div {{ attributes.defaults({class: 'col-12 col-md-6 col-lg-4 pb-4 pt-1'}) }}>
    <div class="card">
        <div class="card-body d-flex flex-column task {% if task.completed %}border-5 border-top border-success{% endif %}">
            <div class="d-flex justify-content-between">
                <h3 class="h6 card-title mt-2">{{ task.title }}</h3>
                {% if task.completed %}
                    <i class="bi bi-check2-square fs-3 text-success"></i>
                {% else %}
                    <i class="bi bi-x fs-3 text-warning"></i>
                {% endif %}
            </div>
            <hr class="w-25">
            <p class="card-text">{{ task.content }}</p>
            <hr class="w-25">
            <div class="d-flex flex-nowrap align-items-center justify-content-end gap-1 mb-0">
                {% if is_granted('delete', task) %}
                    <a href="{{ path('app_task_delete', {id: task.id}) }}" class="btn btn-sm btn-danger col-4">Supprimer</a>
                {% endif %}
                {% if task.completed == false %}
                    <a href="{{ path('app_task_mark', {id: task.id}) }}" class="btn btn-sm btn-success col-8">Marquer comme faite</a>
                {% else %}
                    <a href="{{ path('app_task_mark', {id: task.id}) }}" class="btn btn-sm btn-outline-warning col-8">Marquer comme « à faire »</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
